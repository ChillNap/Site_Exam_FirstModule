<!DOCTYPE html>
<html lang="ru" xmlns="http://www.w3.org/1999/html">

<head>

    <!-- include the head -->
    <link rel="stylesheet" href="/section3.css">
    <%- include('partials/head') %>
    <title>Изменяем кириллицу на латиницу по клику</title>
</head>


<body>

    <header>
        <!-- Include the header -->
        <%- include('partials/header') %>

    </header>

    <div class="passport-container">
        <!-- Background image -->
        <img src="/images/Passport.jpg" alt="Passport" class="passport-image">
        <img src="/images/linux_ava.jpg" alt="overlay_image" class="overlay-photo" style="width:200px;">
        <!-- Overlay text fields -->

        <input type="text" id="given_authority" class="overlay-text" value="важными людьми">
        <input type="text" id="surname" class="overlay-text" value="Черных">
        <input type="text" id="given_date" class="overlay-text" value="01.01.2019">
        <input type="text" id="organization_code" class="overlay-text" value="333666777">
        <input type="text" id="name" class="overlay-text" value="Артём">
        <input type="text" id="patronymic" class="overlay-text" value="Анатольевич">
        <input type="text" id="birth_year" class="overlay-text" value="03.12.2005">
        <input type="text" id="gender" class="overlay-text" value="М">
        <input type="text" id="place_of_birth" class="overlay-text" value="Москва">

        <div class="buttons">
            <button onclick="translateToLatin()">Перевести На Латиницу</button>
            <a href="/images/DOM_check.png" target="_blank">
                 <button>DOM_JS. Считываем информацию из DOM</button>
            </a>
        </div>

    </div>

    <script>
        function translateToLatin() {

            const fieldsToTranslate = ['surname', 'name', 'birth_year', 'patronymic'];
            const cyrillicToLatinMap = {
                'А': 'A', 'Б': 'B', 'В': 'V', 'Г': 'G', 'Д': 'D', 'Е': 'E', 'Ё': 'E', 'Ж': 'Zh',
                'З': 'Z', 'И': 'I', 'Й': 'Y', 'К': 'K', 'Л': 'L', 'М': 'M', 'Н': 'N', 'О': 'O',
                'П': 'P', 'Р': 'R', 'С': 'S', 'Т': 'T', 'У': 'U', 'Ф': 'F', 'Х': 'Kh', 'Ц': 'Ts',
                'Ч': 'Ch', 'Ш': 'Sh', 'Щ': 'Shch', 'Ъ': '', 'Ы': 'Y', 'Ь': '', 'Э': 'E', 'Ю': 'Yu',
                'Я': 'Ya', 'а': 'a', 'б': 'b', 'в': 'v', 'г': 'g', 'д': 'd', 'е': 'e', 'ё': 'e',
                'ж': 'zh', 'з': 'z', 'и': 'i', 'й': 'y', 'к': 'k', 'л': 'l', 'м': 'm', 'н': 'n',
                'о': 'o', 'п': 'p', 'р': 'r', 'с': 's', 'т': 't', 'у': 'u', 'ф': 'f', 'х': 'kh',
                'ц': 'ts', 'ч': 'ch', 'ш': 'sh', 'щ': 'shch', 'ъ': '', 'ы': 'y', 'ь': '', 'э': 'e',
                'ю': 'yu', 'я': 'ya'
            };

            fieldsToTranslate.forEach(fieldId => {
            const field = document.getElementById(fieldId);
            field.value = [...field.value]
                .map(char => (cyrillicToLatinMap[char] !== undefined ? cyrillicToLatinMap[char] : char))
                .filter(char => char !== 'ь' && char !== 'ъ')
                .join('');
            });
        }
    </script>


     <footer>
        <!-- Include the footer -->
        <%- include('partials/footer') %>
    </footer>
</body>
</html>
